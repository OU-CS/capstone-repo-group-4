{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "extends": ["airbnb-typescript", "prettier", "prettier/@typescript-eslint"],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "es6": true,
      "browser": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "indent": ["error", 4],
      "react/jsx-indent": ["error", 4]
    }
}